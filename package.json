{
  "name": "@vibedx/vibekit",
  "version": "0.2.0",
  "description": "A powerful CLI tool for managing development tickets and project workflows",
  "main": "index.js",
  "type": "module",
  "files": [
    "index.js",
    "src/",
    "assets/"
  ],
  "bin": {
    "vibe": "index.js"
  },
  "scripts": {
    "start": "node --watch index.js",
    "test": "npm run test:cleanup && NODE_OPTIONS='--experimental-vm-modules' jest --detectOpenHandles",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --detectOpenHandles",
    "test:cleanup": "rm -rf __temp__",
    "test:e2e": "node scripts/e2e.js",
    "prepublishOnly": "echo 'Ready to publish'",
    "version": "git add -A && git commit -m 'chore: version bump'",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "cli",
    "tickets",
    "workflow",
    "development",
    "project-management"
  ],
  "author": "Ives van Hoorne",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vibedx/vibekit.git"
  },
  "bugs": {
    "url": "https://github.com/vibedx/vibekit/issues"
  },
  "homepage": "https://github.com/vibedx/vibekit#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "clipboardy": "^4.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "__DEV__": true
    },
    "testMatch": [
      "**/src/**/*.test.js",
      "**/__tests__/**/*.test.js",
      "**/tests/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "forceExit": true,
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "index.js",
      "!src/utils/cli.test.js",
      "!src/**/*.test.js",
      "!**/__tests__/**",
      "!**/__temp__/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 13,
        "functions": 20,
        "lines": 14,
        "statements": 14
      }
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
